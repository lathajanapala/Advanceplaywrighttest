{
    "version": "1.0",
    "description": "Payment Test Data",
    "author": "Test Automation Team",
    "dateCreated": "2023-10-01",
    "lastUpdated": "2023-10-15",
    "testDataType": "Payment",
    "dataFormat": "JSON",
    "dataSource": "testdata/payment_testdata.json",
"environment": "Staging",

"testEnvironment": {
    "baseUrl": "https://staging.example.com",
    "apiEndpoint": "/api/payments",
    "timeout": 30
},
    "testCases": [
        {
            "testCaseId": "TC001",
            "description": "Verify successful payment",
            "paymentMethod": "CreditCard",
            "amount": 100.00,
            "currency": "USD",
            "cardNumber": "4111111111111111",
            "expiryDate": "12/25",
            "cvv": "123",
            "expectedMessage": "Payment successful"
        },
        {
            "testCaseId": "TC002",
            "description": "Verify payment failure due to insufficient funds",
            "paymentMethod": "CreditCard",
            "amount": 5000.00,
            "currency": "USD",
            "cardNumber": "4111111111111111",
            "expiryDate": "12/25",
            "cvv": "123",
            "expectedMessage": "Insufficient funds"
        },
        {
            "testCaseId": "TC003",
            "description": "Verify payment failure due to invalid card details",
            "paymentMethod": "CreditCard",
            "amount": 100.00,
            "currency": "USD",
            "cardNumber": "1234567890123456",
            "expiryDate": "01/20",
            "cvv": "000",
            "expectedMessage": "Invalid card details"
        },
        {
            "testCaseId": "TC004",
            "description": "Verify payment with zero amount",
            "paymentMethod": "CreditCard",
            "amount": 0.00,
            "currency": "USD",
            "cardNumber": "4111111111111111",
            "expiryDate": "12/25",
            "cvv": "123",
            "expectedMessage": "Invalid amount"
        },
        {
            "testCaseId": "TC005",
            "description": "Verify payment with negative amount",
            "paymentMethod": "CreditCard",
            "amount": -50.00,
            "currency": "USD",
            "cardNumber": "4111111111111111",
            "expiryDate": "12/25",
            "cvv": "123",
            "expectedMessage": "Invalid amount"
        },
        {
            "testCaseId": "TC006",
            "description": "Verify payment with expired card",
            "paymentMethod": "CreditCard",
            "amount": 100.00,
            "currency": "USD",
            "cardNumber": "4111111111111111",
            "expiryDate": "01/23",
            "cvv": "123",
            "expectedMessage": "Card expired"
        },
        {
            "testCaseId": "TC007",
            "description": "Verify payment with unsupported currency",
            "paymentMethod": "CreditCard",
            "amount": 100.00,
            "currency": "XYZ",
            "cardNumber": "4111111111111111",
            "expiryDate": "12/25",
            "cvv": "123",
            "expectedMessage": "Unsupported currency"
        },
        {
            "testCaseId": "TC008",
            "description": "Verify payment with missing CVV",
            "paymentMethod": "CreditCard",
            "amount": 100.00,
            "currency": "USD",
            "cardNumber": "4111111111111111",
            "expiryDate": "12/25",
            "cvv": "",
            "expectedMessage": "Invalid CVV"
        },
        {
            "testCaseId": "TC009",
            "description": "Verify payment with invalid expiry date format",
            "paymentMethod": "CreditCard",
            "amount": 100.00,
            "currency": "USD",
            "cardNumber": "4111111111111111",
            "expiryDate": "2025-12",
            "cvv": "123",
            "expectedMessage": "Invalid expiry date format"
        },
        {
            "testCaseId": "TC010",
            "description": "Verify payment with maximum allowable amount",
            "paymentMethod": "CreditCard",
            "amount": 1000000.00,
            "currency": "USD",
            "cardNumber": "4111111111111111",
            "expiryDate": "12/25",
            "cvv": "123",
            "expectedMessage": "Payment successful"
        }
    ]
}

